            function sfONDuty() {
                var v = document.getElementsByName("duty");
                for (var i = 0; i < v.length; i++) {
                    if (v[i].checked) {
                        duty = v[i].value;
                    }
                }
            }
            function dblclick(number, job, name, sex, datetime, bid,duty , tel, oarea,remark1) {
                sessionStorage["onumber"] = number;
                sessionStorage["ojob"] = job;
                sessionStorage["oname"] = name;
                sessionStorage["osex"] = sex;
                sessionStorage["odatetime"] = datetime;
                sessionStorage["oduty"] = duty;
                sessionStorage["obid"] = bid;
                sessionStorage["otel"] = tel;
                sessionStorage["oarea"] = oarea;
                sessionStorage["oremark"] = remark1;
                layer.open({
                    type: 2,
                    shade: 0.5,
                    title: "修改信息",
                    shadeClose: true,
                    area: ['450px', '58%'],
                    content: '/Manager/ModifyManger',
                    end: function () {
                        location.reload();
                    }
                });

            }

