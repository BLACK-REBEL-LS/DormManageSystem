    <div id="omain">
        @if (ViewData["Table"] != null)
        { 
        <table class="table table-bordered table-condensed">
            <thead class="thead-color">
                <tr>
                    <th class="text-center">序号</th>
                    <th class="text-center">编号</th>
                    <th class="text-center">职务</th>
                    <th class="text-center">姓名</th>
                    <th class="text-center">性别</th>
                    <th class="text-center">年龄</th>
                    <th class="text-center">负责楼号</th>
                    <th class="text-center">联系电话</th>
                    <th class="text-center">住址</th>
                    <th class="text-center">备注</th>

                </tr>
            </thead>
            <tbody class="text-center">
                
                @{ var k = 1;
        }
        
                @foreach (System.Data.DataRow dataRow in ((System.Data.DataTable)ViewData["Table"]).Rows)
                {
                
                    <tr ondblclick="dblclick(@dataRow["onumber"].ToString(),'@dataRow["job"].ToString()','@dataRow["oname"].ToString()','@dataRow["osex"].ToString()','@dataRow["datetime"].ToString()','@dataRow["bid"].ToString()','@dataRow["duty"].ToString()','@dataRow["tel"].ToString()','@dataRow["oarea"].ToString()','@dataRow["remark1"].ToString()')">
                        <td>@k</td>
                        <td>@dataRow["onumber"].ToString()</td>
                        <td>@dataRow["job"].ToString()</td>
                        <td>@dataRow["oname"].ToString()</td>
                        <td>@dataRow["osex"].ToString()</td>
                        <td>@dataRow["age"].ToString()</td>
                        <td>@dataRow["bid"].ToString()</td>
                        <td>@dataRow["tel"].ToString()</td>
                        <td>@dataRow["oarea"].ToString()</td>
                        <td>@dataRow["remark1"].ToString()</td>
                    </tr>
                    k++;
                }
                
            </tbody>
        </table>
        <div id="foodpage">
            @MvcHtmlString.Create(FoodPage.ShowPageFood((int)ViewData["pageIndex"], (int)ViewData["totalCount"]));
        </div>
        
        }
        
    </div>
